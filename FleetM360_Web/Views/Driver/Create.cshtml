@model FleetM360_PLL.ViewModels.DriverModel

@{
    ViewData["Title"] = "Create";
}

<script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script src="~/js/sweetalert.min.js"></script>

<script>
    function showAlert(type) {
        if (type == "Message") {
            var message = document.getElementById("message").value;
            swal(message, {
                icon: "success",
            });
        }
        else {
            var error = document.getElementById("error").value;
            swal(error, {
                icon: "success",
            });
        }


    }
</script>

@if (TempData["Message"] != null)
{
    <input type="hidden" id="message" value="@TempData["Message"]" />
    <script>
        showAlert("Message");
    </script>
}
else if (TempData["Error"] != null)
{
    <input type="hidden" id="error" value="@TempData["Error"]" />
    <script>
        showAlert("Error");
    </script>
}


<h2>Add New Driver</h2>

<hr />

<div class="card">
    <div class="card-header">
        <h4 class="card-title"></h4>
    </div>
    <div class="card-body">
        <div class="basic-form">
            <form asp-action="Create" asp-controller="Driver">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>
                            Driver Number <span class="text-danger">*</span>
                        </label>
                        <input asp-for="DriverNumber" class="form-control" placeholder="Driver Number" />
                        <span asp-validation-for="DriverNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>
                            FullName  <span class="text-danger">*</span>
                        </label>
                        <input asp-for="FullName" class="form-control" placeholder="FullName" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>
                            Address  <span class="text-danger">*</span>
                        </label>
                        <input asp-for="address" class="form-control" placeholder="Address" />
                        <span asp-validation-for="address" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>
                            Phone Number <span class="text-danger">*</span>
                        </label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>NationalID  <span class="text-danger">*</span></label>
                        <input asp-for="NationalID" class="form-control" placeholder="ConfirmPassword" />
                        <span asp-validation-for="NationalID" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Company  <span class="text-danger">*</span></label>
                        <input asp-for="Company" class="form-control" placeholder="ConfirmPassword" />
                        <span asp-validation-for="Company" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label>
                            Email <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>
                            Password <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Confirm Password  <span class="text-danger">*</span></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
