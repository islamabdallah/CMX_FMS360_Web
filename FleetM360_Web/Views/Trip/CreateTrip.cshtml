        <label for="inputPassword4" class="form-label">truck123 --------------------> silo123</label>
        <a class="btn btn-primary">assign silo</a>
    </div>
    <div class="col-md-4">
        <label for="inputEmail4" class="form-label">Select Silo</label>
        <select id="inputState" class="form-select">
            <option selected>Choose Silo...</option>
            <option value="1">Silo123</option>
            <option value="2">Silo124</option>
            <option value="3">Silo125</option>
            <option value="4">Silo126</option>
        </select>
    </div>
    <div class="col-md-4">
        <label for="inputEmail4" class="form-label">Select Driver</label>
        <select id="inputState" class="form-select">
            <option selected>Choose Driver...</option>
            <option value="1">Driver123</option>
            <option value="2">Driver124</option>
            <option value="3">Driver125</option>
            <option value="4">Driver126</option>
        </select>
    </div>
    <div class="col-md-4">
        <label for="inputEmail4" class="form-label">Select Role</label>
        <select id="inputState" class="form-select">
            <option selected>Choose Role...</option>
            <option value="1">Loading</option>
            <option value="2">OnRoad</option>
            <option value="3">CooDriver</option>
        </select>
    </div>
    <div class="col-md-4">
        <label for="inputEmail4" class="form-label">Assigned Drivers</label>
        <table class="w-100">
            <tr>
                <th>Driver</th>
                <th>Role</th>
            </tr>
            <tbody>
                <tr>
                    <td>Driver123</td>
                    <td>Loading</td>
                </tr>
                <tr>
                    <td>Driver124</td>
                    <td>OnRoad</td>
                </tr>
                <tr>
                    <td>Driver125</td>
                    <td>CooDriver</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-4">
        <label for="inputAddress" class="form-label">Trip Type</label>
        <select id="inputState" class="form-select">
            <option selected>Select Type...</option>
            <option value="1">Cement</option>
            <option value="2">Single Backhauling</option>
            <option value="3">Multi backhauling</option>
            <option value="4">Mission</option>
        </select>
    </div>
    <div class="col-4">
        <label for="inputAddress2" class="form-label">Material</label>
        <input type="text" class="form-control" id="inputAddress2" placeholder="Cement, RDF, or others">
    </div>
    <div class="col-md-4">
        <label for="inputCity" class="form-label">QTY</label>
        <input type="text" class="form-control" id="inputCity">
    </div>
    <div class="col-6">
        <label for="inputAddress" class="form-label">Source</label>
        <select id="inputState" class="form-select">
            <option selected>Select Type...</option>
            <option value="1">Site1</option>
            <option value="2">Site2</option>
            <option value="3">Site3</option>
            <option value="4">Site4</option>
        </select>
    </div>
    <div class="col-6">
        <label for="inputAddress" class="form-label">Destination</label>
        <select id="inputState" class="form-select">
            <option selected>Select Type...</option>
            <option value="1">Site1</option>
            <option value="2">Site2</option>
            <option value="3">Site3</option>
            <option value="4">Site4</option>
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>
